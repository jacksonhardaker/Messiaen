{
  "env": {
      "browser": true,
      "es6": true,
      "node": true
  },
  "settings": {
      "react": {
          "version": "detect"
      }
  },
  "plugins": [
    "react-hooks"
  ],
  "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "globals": {
  },
  "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "rules": {
      "object-shorthand": ["error", "always"],
      "space-before-function-paren": 0,
      "indent": ["error", 2],
      "linebreak-style": ["error", "unix"],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "react/prop-types": 0,
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
  }
}
